@page
@model RazorPagesCampaign.Pages.Campaigns.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Campaign</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.Keywords)
        </dt>
        <dd class="col-sm-10">
            @foreach (var keyword in Model.Campaign.Keywords)
            {
                @($"#{keyword.Name}")
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.BidAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.BidAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.Town)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Town)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.Radius)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Radius)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Campaign.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
