@page
@model RazorPagesCampaign.Pages.Campaigns.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Campaign[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campaign[0].Keywords)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campaign[0].BidAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campaign[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campaign[0].Town)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campaign[0].Radius)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Campaign) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @foreach (var keyword in item.Keywords)
                {
                    @($"#{keyword.Name}")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Town)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Radius)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
